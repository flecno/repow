	"version": "0.2.0",
	"configurations": [
		{
			"name": "app clone",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/app/main.go",
			"env": {},
			"args": ["clone", "${env:HOME}/temp/repow/dev", "-i", "\/infrastructure"]
		},
		{
			"name": "app clone (noargs)",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/app/main.go",
			"env": {},
			"args": ["clone", "${env:HOME}/temp/repow/dev"]
		},
		{
			"name": "app clone (starred)",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/app/main.go",
			"env": {},
			"args": ["clone", "${env:HOME}/temp/repow/dev", "-s"]
		},
		{
			"name": "app clone (rules)",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/app/main.go",
			"env": {},
			"args": ["clone", "${env:HOME}/temp/repow/dev", "-i", "\/infrastructure.*",  "-i", ".*pig.*", "-e", ".*foo.*", "-e", ".*bar.*"]
		},
		{
			"name": "app cleanup",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/app/main.go",
			"env": {},
			"args": ["cleanup", "${env:HOME}/temp/repow/dev"]
		},
		{
			"name": "app validate (all)",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/app/main.go",
			"env": {},
			"args": ["validate", "${env:HOME}/temp/repow/dev"]
		},
		{
			"name": "app apply (all)",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/app/main.go",
			"env": {},
			"args": ["apply", "${env:HOME}/temp/repow/dev"]
		},
		{
			"name": "app update check (all)",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/app/main.go",
			"env": {},
			"args": ["update", "check", "${env:HOME}/temp/repow/dev"]
		},
		{
			"name": "app update fetch (all)",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/app/main.go",
			"env": {},
			"args": ["update", "fetch", "${env:HOME}/temp/repow/dev"]
		},
		{
			"name": "srv",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/app/main.go",
			"env": {},
			"args": ["serve"]
		}
	]
}
